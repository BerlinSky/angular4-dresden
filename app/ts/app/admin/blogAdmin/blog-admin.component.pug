.blockquotes
  p Blog admin menu:
    span(*ngIf="currentUser") {{currentUser}} Logged in

.navbar
  ul.menu
    li
      a(href="/" (click)="chooseMode('add')") Add Post
    li(*ngIf="menuChoice")
      a(href="/" (click)="chooseMode('')") Manage Blog
    li
      a([routerLink]="['/admin']") Admim
    li(*ngIf="currentUser")
      a(href="/" (click)="logout") Logout


div([ngSwitch]="menuChoice")
  div(*ngSwitchCase="'add'")
    h2 Add Menu
  div(*ngSwitchDefault)
    h2 Default
